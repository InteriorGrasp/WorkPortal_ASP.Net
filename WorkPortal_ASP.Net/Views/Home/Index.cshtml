@{
    ViewData["Title"] = "Home Page";
}
    
<div id="background-image-container">
    <div class="full-height">
        <div id="content-container" class="text-center">
            <h1 class="display-4">Welcome To Payroll Portal</h1>
            <p>This system allows you to schedule, payrolls, and attendance records.</p>
        </div>
    </div>
</div>
<style>
    /* Custom styles for Home Page */
    .full-height {
        height: 80vh; /* Full viewport height */
        display: flex;
        align-items: center; /* Center vertically */
        justify-content: center; /* Center horizontally */
        background-image: linear-gradient(to bottom, #ffffff, #007bff); /* White to blue gradient */
        text-align: center; /* Center text */
    }


    .text-center {
        padding: 50px 20px;
        background-color: rgba(248, 249, 250, 0.8); /* Semi-transparent light grey background */
        border-radius: 10px;
    }

    .display-4 {
        font-size: 3rem;
        font-weight: 300;
        color: #343a40; /* Dark grey text color */
    }

    .text-center p {
        font-size: 1.25rem;
        color: #6c757d; /* Medium grey text color */
    }

    content-container {
        padding: 50px 20px;
        background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent dark background */
        border-radius: 10px;
        position: relative; /* Ensure content is above blurred background */
        z-index: 2; /* Place content above blurred background */
    }

    nav, footer {
        opacity: 0.7px;
        box-shadow: 0 0 10px 5px rgba(0, 0, 0, 0.5);
    }
</style>
